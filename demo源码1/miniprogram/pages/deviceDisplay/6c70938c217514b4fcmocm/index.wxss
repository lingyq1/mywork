.back{
  width: inherit;
  height: 600rpx;
  display:flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;

}
 
page {
  height: 100%;
 }
 view , scroll-view{
  padding: 0px;
  margin: 0px;
 }
 .center{
   display: flex;
   flex-direction: column;
   align-items: center;
 }
 .weui-navbar{
  width: 100%;
  /* border-bottom: 1px solid #00bba1; */
  box-sizing: border-box;
  white-space: nowrap; 
  z-index: 100;
  background-color: inherit;
  
 }
 .rec{
  width: 100%;
  height: 7%;
 }
 .weui-navbar .default-item{
  width:20%;
  display: inline-block;
  text-align: center;
  font-size: 32rpx;
  box-sizing: border-box;
  height: 7%;
  /* margin: 0 5%; */
  padding: 10rpx 15% ;
  /* padding-bottom: 10rpx; */
 }
 .weui-navbar .item_on{
  color: #00bba1;
 }
 .weui-navbar-slider{
  position: absolute;
  width: 70rpx;
  height: 5rpx;
  content:"";
  background: #00bba1;
  bottom: 0px;
  left: 15%;
  transition: transform .3s;
 }
 

